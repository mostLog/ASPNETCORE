
@{
    ViewData["Title"] = "AddOrEditSpiderTask";
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
</head>
<body style="margin:10px;">
    <form class="layui-form" action="">
        <div class="layui-form-item">
            <label class="layui-form-label">任务名称</label>
            <div class="layui-input-block">
                <input type="text" name="Name" lay-verify="required" autocomplete="off" placeholder="请输入任务名称" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">任务描述</label>
            <div class="layui-input-block">
                <textarea placeholder="请输入任务描述" class="layui-textarea" name="Description"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">爬取模式</label>
            <div class="layui-input-block">
                <input type="radio" name="CrawlerType" value="0" title="网址爬取（多网址）" lay-filter="radCrawlerType" checked>
                <input type="radio" name="CrawlerType" value="1" title="单网址爬取" lay-filter="radCrawlerType">
            </div>
        </div>
        <div class="layui-form-item" id="ItemToCOne">
            <div class="layui-input-block">
                <textarea class="layui-textarea" name="Urls"></textarea>
            </div>
        </div>
        <div class="layui-form-item" style="display:none;" id="ItemToCTwo">
            <div class="layui-input-block">
                <input type="text" autocomplete="off" class="layui-input" name="Urls">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">定时执行</label>
            <div class="layui-input-block">
                <input type="checkbox" name="IsOpenTime" lay-skin="switch" lay-text="开启|关闭" lay-filter="switchOpenTime">
            </div>
        </div>
        <div  class="layui-form-item" id="ItemToOpenTime" style="display:none;">
            <label class="layui-form-label"></label>
            <div class="layui-input-inline">
                <input id="OpenTime" name="OpenTime" class="layui-input" placeholder="日期" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD hh:mm:ss'})">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="btnSubmit">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/js/business/spidertask/Form.js"></script>
</body>
</html>






