@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title></title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/lib/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/css/common/font/iconfont.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet" />
    <base target="_blank">
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInUp">
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-title">
                        <h5>所有采集任务</h5>
                        <div class="box-tools">
                            <button id="btn-add" class="layui-btn layui-btn-small">新建任务</button>
                            <button class="layui-btn layui-btn-small">导出Excel</button>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="row">
                            <div class="col-md-11">
                                <form class="form-inline">
                                    <div class="form-group">
                                        <label for="exampleInputName2">任务名称</label>
                                        <input type="text" class="form-control" id="exampleInputName2" placeholder="请输入任务名称">
                                    </div>
                                   
                                    <button type="submit" class="layui-btn layui-btn-small">搜索</button>
                                </form>
                            </div>
                        </div>
                        <div class="list">
                            <div id="tb">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="view" type="text/html">
        <table class="layui-table text-center" lay-even>
            <thead>
                <tr>
                    <th>状态</th>
                    <th><i class="iconfont icon-spider"></i> 爬虫</th>
                    <th>创建时间</th>
                    <th>当前进度</th>
                    <th style="width:12%;">操作</th>
                </tr>
            </thead>
            <tbody>
                {{# layui.each(d.rows,function(index,item){ }}
                <tr>
                    <td>{{item.status==0?"进行中":"结束"}}</td>
                    <td>
                        标题：{{item.name}}
                        <br />
                        描述：{{item.description}}
                    </td>
                    <td>{{item.createDateTime}}</td>
                    <td></td>
                    <td>
                        <a class="layui-btn layui-btn-small layui-btn-normal" href="javascript:fn.update()"><i class="iconfont icon-edit"></i>修改</a>
                        <a class="layui-btn layui-btn-small layui-btn-danger" href="javascript:fn.delete()"><i class="iconfont icon-delete"></i>删除</a>
                    </td>
                </tr>
                {{# }); }}
            </tbody>
        </table>
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/js/business/spidertask/Index.js"></script>
</body>
</html>
